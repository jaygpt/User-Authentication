  <script src="/js/privatechat/pm.js"></script>
    <div class="col-md-12 mob-clearfix margin-80">
        <input type = "hidden" name="department" value="{{user.department}}">
        <input type = "hidden" name="name" id = "name" value="{{user.name}}">
        <div class="col-md-12">
            <div class="chat_container">
                <div class="row">
                    <div class="col-sm-4 col-md-3">
                        <div class="row" style="margin-top:10px">
                            <div class="col-md-12">
                                <div class="card-container">
                                    <div class="card">
                                        <div class="front">

                                            <div class="content main-scroll">
                                                <div class="main">
                                                    <a href = "/chat">                                                    <p class="friends" style="margin-bottom:0px;color:#444">
                                                        Friends<span id="numOfFriends"></span>
                                                    </p>
                                                    </a>

                                                    <hr style="margin-top:10px" />

                                                    <div class="onlineFriends">
                                                    {{#each alluser}}
                                                        <li>
                                                        <a href="/chat/{{this.link}}">{{this.name}}</a></li>
                                                        {{/each}}
                                                    </div>
                                                    
                                                </div>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!--chat_sidebar-->
                    <div class="col-sm-8 col-md-9 message_section assign-width">
                        <div class="row">
                            <div class="new_message_head">
                                <div class="pull-left">
                                    <button id = "namesender" ><i class="" aria-hidden="true"></i> 

                                    </button></div><div class="pull-right">

                                </div>
                            </div>

                            <div class="chat_area">
                                <ul id="messages" class="list-unstyled">

                                        {{#each result}}
                                        <li class="left clearfix">
                                            <span class="chat-img1 pull-left">
                                                <img src="https://placehold.it/300x300" class="img-circle" height="50px" width="50px"/>
                                            </span>
                                              <div class="chat-body1 clearfix">
                                                <p>
                                                    <span class="chat-name">{{this.senderName}}</span>
                                                    <br />
                                                    {{this.message}}
                                                </p>
                                              </div>
                                         </li>
                                         {{/each}}
                                </ul>
                                <!-- </ul> -->
                            </div><!--chat_area-->
                            <div class="message_write">

                                <form action="" id="message_form" style="width:100%; padding:0; margin:0;" method="post">

                                    <textarea class="form-control" name="message" id="msg" placeholder="Type a message"></textarea>
                                      <div class="clearfix"></div>
                                      <div class="chat_bottom">
                                          <button type = "submit" id="chatMessage" class="pull-right btn btn-primary" style="background: #4aa1f3; border: #4aa1f3; ">
                                              Send
                                          </button>
                                      </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
