</div> <!-- /container -->
<div id="id01" class="modal">

  <form class="modal-content animate" method="post" action="/users/login">
    <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
    <h2 style="text-align: center">Account Login</h2>

    <div class="imgcontainer">

      <img src="https://cdn.drawception.com/images/avatars/583244-C6E.jpg" alt="Avatar" class="avatar">
    </div>

    <div class="containr">

      <label for="uname"><b>Username  </b></label>
      <input class="inputlogin" type="text" placeholder="Enter Username" name="username" required>
      <br/>
      <label for="psw"><b>Password</b></label>
      <input class="inputlogin" type="password" placeholder="Enter Password" name="password" required>
      <br>
      <label>
        <input type="checkbox" checked="checked" name="remember"> Remember me
      </label>
      <br>
      <button type="submit" class="btn btn-default" id="submit">Submit</button>

    </div>

    <div class="containr" style="background-color:#f1f1f1">
      <span class="psw"><a href="#">Forgot Password?</a></span>
    </div>
  </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}

    $("#submit").button();
</script>

<script type="text/javascript">
var btn = document.getElementById("login");
btn.onclick = function() {
    modal.style.display = "block";
}
</script>
    </body>
</html>
