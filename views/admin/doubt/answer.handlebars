<div class="col-12">
  <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{question.course.course}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            {{question.name}}
            {{#if question.file}}
              <a href="/doubt/download/{{question.id}}" style="float:right"><i class="fa fa-download btn btn-primary" aria-hidden="true"> Files</i></a>
            {{/if}}
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{question.date}}</p>

          <hr>

          <!-- Preview Image -->

          <!-- Post Content -->
          <p class="lead">{{question.question}}</p>

          <!-- Comments Form -->
          <div class="card my-4">
            <h5 class="card-header">Answer the Question:</h5>
            <div class="card-body">
              <form action="/doubt/answer/submit/{{question.id}}" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <textarea name="body" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group">
                  <input name="file" type="file" class="form-control" id="file">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>

          <!-- Single Comment -->
          {{#each question.answers}}
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="https://cdn2.iconfinder.com/data/icons/rcons-user/32/male-circle-512.png" width="50px" height="50px" style="border-radius:25px">
            <div class="media-body">
              <h5 class="mt-0">{{this.user}}</h5>
              {{body}}
              {{#if this.file}}
              <a href="/doubt/download/answer/{{id}}" style="float:right"><i class="fa fa-download btn btn-primary" aria-hidden="true"> Files</i></a>
              {{/if}}
            </div>
          </div>
          <hr>
          {{/each}}

          <!-- Comment with nested comments -->

        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

          <!-- Search Widget -->
          <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                  <button class="btn btn-secondary" type="button">Go!</button>
                </span>
              </div>
            </div>
          </div>

          <!-- Categories Widget -->

          <!-- Side Widget -->

        </div>

      </div>
</div>
